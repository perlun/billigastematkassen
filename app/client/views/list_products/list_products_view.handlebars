<ul class="nav nav-tabs">
  <li class="active">
    <a href="#alla" data-toggle="tab">Alla</a>
  </li>
  {{#each group in globalData.productGroups}}
  <li>
    <a {{bindAttr href="group.tabSlug"}} data-toggle="tab">{{group.description}}</a>
  </li>
  {{/each}}
</ul>

<ul class="thumbnails">
  {{#each item in filteredItems}}
  <li class="span2">
    <div class="thumbnail" style="height: 240px;">
      {{#if item.imageUrl}}
      <div class="thumbnailImageContainer">
        <img {{bindAttr src="item.imageUrl"}}/>
      </div>
      {{else}}
      <div style="margin-bottom: 12px; text-align: center;">
        <i class="icon-question-sign" style="font-size: 5em; height: 150px;"></i>
      </div>                  
      {{/if}}
      <div style="font-weight: bold; word-wrap: break-word;">{{item.name}}</div>
      <div>{{item.qty}} {{item.unitOfMeasure}} {{item.brand}}</div>
    </div>
  </li>
  {{/each}}
</ul>
